<main>
  <div class="mb-40 mt-80 flex justify-center">
    <!-- Contenedor del carrusel de imágenes -->
    <div class="relative w-full max-w-[900px] h-auto">
      <!-- Imagen 1 -->
      <div class="absolute inset-0 flex justify-center items-center duration-500 opacity-100" id="image1">
        <img src="/assets/ImagenCarrusel1.jpg" alt="Imagen 1" class="w-[90%] h-auto object-cover rounded-md">
        <!-- Flecha derecha -->
        <div class="absolute right-4 bottom-1/2 transform translate-y-1/2 bg-white bg-opacity-70 rounded-full p-2 cursor-pointer" id="nextBtn">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l7-7-7-7M5 12h14"></path>
          </svg>
        </div>
      </div>

      <!-- Imagen 2 -->
      <div class="absolute inset-0 flex justify-center items-center opacity-0 duration-500" id="image2">
        <img src="/assets/ImagenCarrusel2.jpg" alt="Imagen 2" class="w-[90%] h-auto object-cover rounded-md">
        <!-- Flecha izquierda -->
        <div class="absolute left-4 bottom-1/2 transform translate-y-1/2 bg-white bg-opacity-70 rounded-full p-2 cursor-pointer" id="prevBtn">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 5l-7 7 7 7M19 12H5"></path>
          </svg>
        </div>
        <!-- Flecha derecha -->
        <div class="absolute right-8 bottom-1/2 transform translate-y-1/2 bg-white bg-opacity-70 rounded-full p-2 cursor-pointer" id="nextBtn2">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l7-7-7-7M5 12h14"></path>
          </svg>
        </div>
      </div>

      <!-- Imagen 3 -->
      <div class="absolute inset-0 flex justify-center items-center opacity-0 duration-500" id="image3">
        <img src="/assets/ImagenCarrusel3.jpg" alt="Imagen 3" class="w-[90%] h-auto object-cover rounded-md">
        <!-- Flecha izquierda -->
        <div class="absolute left-4 bottom-1/2 transform translate-y-1/2 bg-white bg-opacity-70 rounded-full p-2 cursor-pointer" id="prevBtn2">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 5l-7 7 7 7M19 12H5"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', () => {
      // Array de las imágenes
      const images = document.querySelectorAll('.absolute');
      let currentImage = 0; // Índice de la imagen actual

      // Función para mostrar la siguiente imagen
      const showNextImage = () => {
        // Ocultar la imagen actual
        images[currentImage].classList.add('opacity-0');
        images[currentImage].classList.remove('opacity-100');
        // Pasar a la siguiente imagen
        currentImage = (currentImage + 1) % images.length;
        // Mostrar la nueva imagen
        images[currentImage].classList.add('opacity-100');
        images[currentImage].classList.remove('opacity-0');
      };

      // Función para mostrar la imagen anterior
      const showPrevImage = () => {
        // Ocultar la imagen actual
        images[currentImage].classList.add('opacity-0');
        images[currentImage].classList.remove('opacity-100');
        // Pasar a la imagen anterior
        currentImage = (currentImage - 1 + images.length) % images.length;
        // Mostrar la nueva imagen
        images[currentImage].classList.add('opacity-100');
        images[currentImage].classList.remove('opacity-0');
      };

      // Asignar eventos a las flechas
      document.getElementById('nextBtn')?.addEventListener('click', showNextImage);
      document.getElementById('nextBtn2')?.addEventListener('click', showNextImage);
      document.getElementById('prevBtn')?.addEventListener('click', showPrevImage);
      document.getElementById('prevBtn2')?.addEventListener('click', showPrevImage);
  });
</script>
