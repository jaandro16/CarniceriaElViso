<header class="flex items-center justify-between px-4 py-6 bg-white relative">
  <!-- Menú a la izquierda -->
  <div class="flex items-center gap-4 ml-4 mr-8">
    <button
      aria-label="Abrir menú"
      id="menuButton"
      class="focus:outline-none"
    >
      <img
        src="/assets/Menu.png"
        alt="Menu"
        class="w-6 h-6"
      />
    </button>
  </div>

  <!-- Logo y Nombre de la empresa centrados -->
  <div class="flex-1 text-center">
    <a href="/">
      <img
        src="/assets/logoCarniceria.png"
        alt="Logo"
        class="inline-block h-[60px]"
      />
    </a>
    <h1 class="text-black text-3xl font-serif">Carnicería El Viso</h1>
  </div>

  <!-- Carrito a la derecha -->
  <div class="flex items-center gap-4 mr-4 ml-8">
    <a href="/CompletarPedido" class="flex items-center">
      <img
        src="/assets/Carrito_black.png"
        alt="Carrito"
        class="w-8 h-8"
      />
    </a>
  </div>

  <!-- Menú desplegable -->
  <nav
    id="menu"
    class="fixed top-0 left-0 w-[75%] sm:w-[75%] lg:w-[20%] h-screen bg-gray-100 transform -translate-x-full transition-transform duration-300 ease-in-out flex flex-col gap-4 shadow-lg z-50"
  >
    <!-- Botón cerrar menú -->
    <button
      aria-label="Cerrar menú"
      id="closeMenu"
      class="absolute top-10 right-6 text-2xl text-gray-700 hover:text-red-700"
    >
      ✕
    </button>

    <!-- Contenido del menú -->
    <div class="mt-30 flex flex-col gap-4 px-6">

      <a
        href="/"
        class="flex items-center gap-4 p-4 bg-white rounded-lg shadow-sm hover:bg-gray-200 transition"
      >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
      </svg>
      
        <span class="text-lg font-medium text-gray-800">Nuestros Lotes</span>
      </a>

      <a
        href="#contacto"
        class="flex items-center gap-4 p-4 bg-white rounded-lg shadow-sm hover:bg-gray-200 transition"
      >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
      </svg>      
        <span class="text-lg font-medium text-gray-800">Contacto</span>
      </a>

      <a

        onclick="window.location.href='/#Navigation'"
        class="flex items-center gap-4 p-4 bg-white rounded-lg shadow-sm hover:bg-gray-200 transition"
        >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
      </svg>
      
        <span class="text-lg font-medium text-gray-800">Ven a visitarnos</span>
      </a>
    </div>
    <!-- Pie de página del menú -->
    <div class="mt-auto p-4 bg-gray-200 text-center text-sm text-gray-700">
      <p>&copy; 2024 Carnicería El Viso | Todos los derechos reservados</p>
    </div>
  </nav>
</header>

<!-- JavaScript para manejar la apertura y cierre del menú -->
<script>
  const menuButton = document.getElementById("menuButton");
  const closeMenu = document.getElementById("closeMenu");
  const menu = document.getElementById("menu");

  if (menuButton && menu) {
    menuButton.addEventListener("click", () => {
      menu.classList.remove("-translate-x-full");
    });
  }

  if (closeMenu && menu) {
    closeMenu.addEventListener("click", () => {
      menu.classList.add("-translate-x-full");
    });
  }
</script>