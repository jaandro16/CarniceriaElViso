<!-- JavaScript para manejar la apertura y cierre del menú -->
<script>
  const menuButton = document.getElementById("menuButton");
  const closeMenu = document.getElementById("closeMenu");
  const menu = document.getElementById("menu");

  if (menuButton && menu) {
    menuButton.addEventListener("click", () => {
      (menu as HTMLElement).classList.remove("-translate-x-full");
    });
  }

  if (closeMenu && menu) {
    closeMenu.addEventListener("click", () => {
      (menu as HTMLElement).classList.add("-translate-x-full");
    });
  }

  // Cerrar el menú cuando se haga clic fuera del mismo
  document.addEventListener("click", (event) => {
    if (menu && !menu.contains(event.target as Node) && menuButton && !menuButton.contains(event.target as Node)) {
      (menu as HTMLElement).classList.add("-translate-x-full");
    }
  });
</script>