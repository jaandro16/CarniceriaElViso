---
const { title, price, description, itemsAvailable, imageUrl, features, imgClass  } = Astro.props;
import WhatsAppButton from "./WhatsAppButton.astro";
import Whatsapreminder from "./Whatsapreminder.astro";
---
<div class="relative mx-auto px-8 max-w-7xl py-6 mb-1 md:px-12">
  <div class="mx-auto text-center ">
    <p class="text-black font-serif">
      *Los lotes no podrán ser modificados por normativa de la empresa*
    </p>
  </div>
</div>
<div class="bg-gray-100">
  <main class="max-w-6xl mx-auto px-4 py-8 flex flex-col md:flex-row gap-8 items-center mt-1 mb-20">
    <!-- Imagen del lote -->
    <div class="flex-shrink-0 relative mt-10 md:mt-0 px-3">
      <img
        src={imageUrl}
        alt={title}
        class={`rounded-lg shadow-lg w-full md:w-[450px] object-cover ${imgClass}`}
      />
    </div>
  
    <!-- Información del lote (con márgenes laterales en móviles) -->
    <div class="flex flex-col items-start gap-4 w-full px-6 sm:px-8">
      <!-- Título -->
      <h1 class="text-3xl font-bold text-grey-800">{title}</h1>
  
  
      <!-- Precio -->
      <p class="text-2xl font-semibold text-[#964141]">{price} €</p>
  
      <!-- Disponibilidad -->
      <p class="text-lg font-bold text-yellow-600">
        {itemsAvailable} <span class="text-gray-700">Disponible</span>
      </p>
  
      <!-- Divisor -->
      <div class="border-t border-gray-300 w-full my-4"></div>
  
      <!-- Descripción -->
      <div class="text-gray-600 space-y-2">
        <p>{description}</p>
        <!-- Lista dinámica -->
        <ul class="list-disc pl-6 space-y-1 text-gray-700">
          {features.map((feature) => (
            <li>{feature}</li>
          ))}
        </ul>
      </div>
  
      <!-- Divisor -->
      <div class="border-t border-gray-300 w-full my-4"></div>
  
