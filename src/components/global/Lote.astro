---
const { title, price, description, itemsAvailable, imageUrl, features } = Astro.props;
---

<main class="max-w-6xl mx-auto px-4 py-8 flex flex-col md:flex-row gap-8 items-center">
  <!-- Imagen del lote -->
  <div class="flex-shrink-0 relative">
    <img
      src={imageUrl}
      alt={title}
      class="rounded-lg shadow-lg w-full md:w-[450px] object-cover"
    />
  </div>

  <!-- Información del lote (con márgenes laterales en móviles) -->
  <div class="flex flex-col items-start gap-4 w-full px-6 sm:px-8">
    <!-- Título -->
    <h1 class="text-3xl font-bold text-red-700">{title}</h1>

    <!-- Precio -->
    <p class="text-2xl font-semibold text-gray-800">{price} €</p>

    <!-- Descripción -->
    <div class="text-gray-600 space-y-2">
      <p>{description}</p>
      <!-- Lista dinámica -->
      <ul class="list-disc pl-6 space-y-1 text-gray-700">
        {features.map((feature) => (
          <li>{feature}</li>
        ))}
      </ul>
    </div>

    <!-- Disponibilidad -->
    <p class="text-lg font-bold text-yellow-600">
      {itemsAvailable} <span class="text-gray-700">DISPONIBLES</span>
    </p>
  </div>
</main>
