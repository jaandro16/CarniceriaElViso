<script>
  document.addEventListener('DOMContentLoaded', () => {
    const verMasBtn = document.querySelector('#verMasBtn');
    
    // Cards to reveal after the first click
    const lotes4a6 = document.querySelectorAll('.lote-4, .lote-5, .lote-6');
    const lotes7a10 = document.querySelectorAll('.lote-7, .lote-8, .lote-9, .lote-10');

    let step = 0;  // Variable to track the steps of visibility

    if (verMasBtn) {
      verMasBtn.addEventListener('click', () => {
        if (step === 0) {
          // Mostrar lotes 4 a 6
          lotes4a6.forEach(card => card.classList.remove('hidden'));
          verMasBtn.textContent = 'Ver más lotes';
          step = 1;  // Avanzar al siguiente paso
        } else if (step === 1) {
          // Mostrar lotes 7 a 10
          lotes7a10.forEach(card => card.classList.remove('hidden'));
          verMasBtn.remove();  // Eliminar el botón después de mostrar todos los lotes
        }
      });
    }
  });
</script>

