<script>
  document.addEventListener("DOMContentLoaded", () => {
    const verMasBtn = document.getElementById("verMasBtn");
    const verMenosBtn = document.getElementById("verMenosBtn");
    // Selección de los lotes
    const lotes4a6 = document.querySelectorAll('.lote-4, .lote-5, .lote-6');
    const lotes7a10 = document.querySelectorAll('.lote-7, .lote-8, .lote-9, .lote-10');

    let step = 0; // Estado inicial

    // Asegurar estado inicial de los botones
    if (verMasBtn) verMasBtn.classList.remove('hidden');
    if (verMenosBtn) verMenosBtn.classList.add('hidden');

    // Comprobar si los botones y los lotes existen
    if (verMasBtn && verMenosBtn && lotes4a6 && lotes7a10) {
      // Lógica para el botón "Ver más"
      verMasBtn?.addEventListener('click', () => {
        if (step === 0) {
          // Mostrar lotes 4 a 6
          lotes4a6.forEach(card => card.classList.remove('hidden'));
          step = 1;
        } else if (step === 1) {
          // Mostrar lotes 7 a 10
          lotes7a10.forEach(card => card.classList.remove('hidden'));
          step = 2;

          // Ocultar "Ver más" y mostrar "Ver menos"
          verMasBtn.classList.add('hidden');
          verMenosBtn?.classList.remove('hidden');
        }
      });

      verMenosBtn.addEventListener("click", () => {
        // Efecto de auto scroll-up hacia #Inicio
        const inicio = document.getElementById("Inicio");
        if (inicio) {
          inicio.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });

          // Esperar que la transición de scroll haya terminado antes de ocultar los lotes
          setTimeout(() => {
            // Ocultar todos los lotes después del desplazamiento
            lotes4a6.forEach(card => card.classList.add('hidden'));
            lotes7a10.forEach(card => card.classList.add('hidden'));

            // Reiniciar estado
            step = 0;
            verMenosBtn.classList.add('hidden');
            verMasBtn?.classList.remove('hidden');
          }, 600); // Ajusta el tiempo de espera a la duración de la animación de desplazamiento
        }
      });
    }
  });
</script>



