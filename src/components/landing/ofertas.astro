<script>
  document.addEventListener('DOMContentLoaded', () => {
    const verMasBoton = document.querySelector('#verMasBoton');
    const verMenosBoton = document.querySelector('#verMenosBoton');
    const ofertas4a5 = document.querySelectorAll('.oferta-4, .oferta-5');
    let step = 0;

    // Asegurar estado inicial
    if (verMasBoton) verMasBoton.classList.remove('hidden');
    if (verMenosBoton) verMenosBoton.classList.add('hidden');

    // Mostrar más lotes
    verMasBoton?.addEventListener('click', () => {
        if (step === 0) {
            ofertas4a5.forEach(card => card.classList.remove('hidden'));
            step = 1;
        }
        if (step === 1) {
            verMasBoton.classList.add('hidden');
            verMenosBoton?.classList.remove('hidden');
        }
    });

    // Ocultar lotes
    verMenosBoton?.addEventListener('click', () => {
        ofertas4a5.forEach(card => card.classList.add('hidden'));
        step = 0;
        verMenosBoton.classList.add('hidden');
        verMasBoton?.classList.remove('hidden');

        // Efecto de auto scroll-up hacia #Inicio
        const inicio = document.getElementById("InicioOfertas");
        if (inicio) {
          inicio.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }
    });
  });
</script>