---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from "../../components/global/Header.astro";
import Subheader from "../../components/global/Subheader.astro";
import Footer from "../../components/global/Footer.astro";
import Lote from '../../components/global/Lote.astro';
import Analytics from '@vercel/analytics/astro'

const lote1 = {
  title: "Lote 1 - Pollo",
  price: "14,99",
  description: "Este lote es ideal para disfrutar de comidas sabrosas con los tuyos.",
  imageUrl: "https://i.pinimg.com/736x/4d/fb/71/4dfb7112d98183996fb8fa5399f26568.jpg",
  features: [
    "1kg Alitas de Pollo",
    "1kg Contramuslos",
    "1kg Muslitos de Pollo"
  ]
};
---

<BaseLayout title={lote1.title}>
  <Header />
  <Subheader
  title="Lote 1 Pollo"
  backgroundImage="/assets/imagen_subheader.png"/>
  <Lote {...lote1} imgClass="md:max-h-130"/>
  <Footer />
  <Analytics />
</BaseLayout>