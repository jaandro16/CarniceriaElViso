---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from "../../components/global/Header.astro";
import Subheader from "../../components/global/Subheader.astro";
import Footer from "../../components/global/Footer.astro";
import Lote from '../../components/global/Lote.astro';
import Analytics from '@vercel/analytics/astro'

const lote3 = {
  title: "Lote 3 - Mixto",
  price: "19,99",
  description: "Este lote es perfecto para quienes buscan sabor y variedad en cada bocado.",
  imageUrl: "https://i.pinimg.com/736x/20/6b/92/206b92464641579ca8b048fe1c70ccc8.jpg",
  features: [
    "1kg Salchichas de Cerdo",
    "1kg Lomo Adobo",
    "1kg Jamoncitos"
  ]
};
---

<BaseLayout title={lote3.title}>
  <Header />
  <Subheader
  title="Lote 3 Mixto"
  backgroundImage="/assets/imagen_subheader.png"/>
  <Lote {...lote3} imgClass="md:max-h-130"/>
  <Footer />
  <Analytics />
</BaseLayout>