---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from "../../components/global/Header.astro";
import Subheader from "../../components/global/Subheader.astro";
import Footer from "../../components/global/Footer.astro";
import Lote from '../../components/global/Lote.astro';
import Analytics from '@vercel/analytics/astro'

const lote6 = {
  title: "Lote 6 - Barbacoa",
  price: "35",
  description: "Este lote es ideal para disfrutar de una barbacoa en buena compañía.",
  imageUrl: "https://img.freepik.com/fotos-premium/tocino-crudo-tabla-cortar-piedra-carne-cerdo-pared-negra-vista-superior_89816-11372.jpg?w=740",
  features: [
    "1kg Pincho de Cerdo",
    "1kg Chorizo Casero",
    "1kg Morcilla Cebolla",
    "1kg Panceta Fresca",
    "1kg Butifarra Blanca"
  ]
