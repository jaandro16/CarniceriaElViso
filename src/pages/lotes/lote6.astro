---

<BaseLayout title={lote6.title}>
  <Header />
  <Subheader
  title="Lote 6 Barbacoa"
  backgroundImage="/assets/imagen_subheader.png"/>
  <Lote {...lote6} imgClass="md:max-h-130"/>
  <Footer />
  <Analytics />
</BaseLayout>